@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h2 class="text-center">
    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
    |
    Login
    |
    <a asp-area="Identity" asp-page="/Account/Register">Register</a>
</h2>
<div style="border: 1px solid black; width: 50%; margin: auto">
    <form id="account" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label style="margin-left: 25%" asp-for="Input.UserName"></label>
            <input style="width: 50%; margin: auto" asp-for="Input.UserName" class="form-control" />
            <span asp-validation-for="Input.UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label style="margin-left: 25%" asp-for="Input.Password"></label>
            <input style="width: 50%; margin-left: 25%" asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group text-center">
            <button type="submit">Log in</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
