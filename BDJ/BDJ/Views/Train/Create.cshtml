@model BDJ.Models.TrainCreateViewModel

@{
    ViewData["Title"] = "Create";
}
<div class="text-center">
    <h2>
        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        |
        <a asp-area="" asp-controller="User" asp-action="Index">Users</a>
        |
        <a asp-area="" asp-controller="Line" asp-action="Index">Lines</a>
        |
        <a asp-area="" asp-controller="Train" asp-action="Index">Trains</a>
        |
        <form id="logoutForm" style="display: inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button class="underline-button" style="background: none; border: 0px solid white; color: #0366d6; font-weight: 500;" id="logout" type="submit"><a>Logout</a></button>
        </form>
    </h2>
</div>

<div style="width: 50%; border: 1px solid black; margin: auto">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label style="margin-left: 25%" asp-for="Number" class="control-label"></label>
            <input style="width: 50%; margin: auto" asp-for="Number" class="form-control" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label style="margin-left: 25%" asp-for="Capacity" class="control-label"></label>
            <input style="width: 50%; margin: auto" asp-for="Capacity" class="form-control" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <label style="margin-left: 25%"  class="form-check-label">
                <input class="form-check-input" asp-for="IsFast" /> @Html.DisplayNameFor(model => model.IsFast)
            </label>
        </div>
        <div class="form-group text-center">
            <input type="submit" value="Save"  />
        </div>
    </form>
</div>